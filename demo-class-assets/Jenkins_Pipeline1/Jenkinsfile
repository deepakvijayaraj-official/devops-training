pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'cd simple-java-maven-apps; mvn -B -DskipTests clean package'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'cd simple-java-maven-apps; mvn test'
                }
            }
            // Uncomment the following block if you want to publish JUnit test results
            // post {
            //     always {
            //         junit 'target/surefire-reports/*.xml'
            //     }
            // }
        }

        stage('Deliver') {
            steps {
                script {
                    sh './demo-class-assets/Jenkins_Pipeline1/scripts/deliver.sh'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Use the 'withMaven' step to handle Maven tool configuration
                    withMaven(
                        maven: 'maven', 
                        mavenSettingsConfig: 'your-maven-settings-id' 
                    ) {
                        sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=simple-java-maven-apps'
                    }
                }
            }
        }
    }
}

