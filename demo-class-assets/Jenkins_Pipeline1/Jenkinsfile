pipeline {
    agent any

    tools {
        // Define the Maven tool with the name configured in Jenkins
        maven 'Maven'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    // Using 'script' block for multiline shell commands
                    sh 'cd simple-java-maven-apps; mvn -B -DskipTests clean package'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'cd simple-java-maven-apps; mvn test'
                }
            }
            // You can uncomment the following block if you want to publish JUnit test results
            // post {
            //     always {
            //         junit 'target/surefire-reports/*.xml'
            //     }
            // }
        }

        stage('Deliver') {
            steps {
                script {
                    sh './demo-class-assets/Jenkins_Pipeline1/scripts/deliver.sh'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withMaven(maven: 'Maven') {
                        sh "mvn clean verify sonar:sonar -Dsonar.projectKey=simple-java-maven-apps"
                    }
                }
            }
        }
    }
}

